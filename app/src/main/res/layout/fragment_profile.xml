<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F6F7FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Profil Saya"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/btnSetting"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_setting" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_circle"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_placeholder" />

            <ImageView
                android:id="@+id/btnChangePhoto"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                android:background="@drawable/bg_circle_primary"
                android:padding="6dp"
                android:src="@drawable/ic_camera"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Budi Santoso"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Pencinta buku fiksi ilmiah | Jakarta"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#6B7280" />

        <TextView
            android:id="@+id/tvMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:padding="6dp"
            android:text="Member sejak 2021"
            android:textSize="12sp"
            android:textColor="#2563EB"
            android:background="@drawable/bg_chip_blue" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:text="Edit Profil"
            android:textColor="#000000"
            android:textStyle="bold"

            android:backgroundTint="#D1D5DB"
            app:cornerRadius="12dp"
            app:iconTint="@null"
            app:strokeWidth="0dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="PENGATURAN AKUN"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#9CA3AF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_card"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubah Kata Sandi"
                android:textSize="14sp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email &amp; Telepon"
                android:textSize="14sp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privasi &amp; Keamanan"
                android:textSize="14sp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notifikasi"
                android:textSize="14sp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="BANTUAN"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#9CA3AF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_card"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FAQ"
                android:textSize="14sp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hubungi Kami"
                android:textSize="14sp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>
        </LinearLayout>

        <!-- ===== LOGOUT ===== -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:text="Keluar"
            android:textStyle="bold"
            android:textColor="#DC2626"

            android:backgroundTint="#FEE2E2"
            app:cornerRadius="12dp"
            app:iconTint="@null"
            app:strokeWidth="0dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Versi Aplikasi 2.4.0"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="#9CA3AF" />

    </LinearLayout>
</ScrollView>
